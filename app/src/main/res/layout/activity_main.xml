<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentBottom="true"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:layout_alignParentTop="true">

                <Button
                    android:id="@+id/p1p1"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:backgroundTint="#8E6D3C"
                    android:tag="p1p1"
                    android:text="+" />

                <Button
                    android:id="@+id/p1m1"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:backgroundTint="#8E6D3C"
                    android:tag="p1m1"
                    android:text="-" />

                <Button
                    android:id="@+id/p1p5"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:backgroundTint="#8E6D3C"
                    android:tag="p1p5"
                    android:text="+5" />

                <Button
                    android:id="@+id/p1m5"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:backgroundTint="#8E6D3C"
                    android:tag="p1m5"
                    android:text="-5" />

            </LinearLayout>

            <TextView
                android:id="@+id/lifep1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="18dp"
                android:text="p1\n100"
                android:textAlignment="center"
                android:textColor="#8E6D3C"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lifep2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:padding="18dp"
                android:text="p2\n100"
                android:textAlignment="center"
                android:textColor="#C31F1F"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:layout_alignParentTop="true">

                <Button
                    android:id="@+id/p2p1"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:backgroundTint="#C31F1F"
                    android:tag="p2p1"
                    android:text="+" />

                <Button
                    android:id="@+id/p2m1"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:backgroundTint="#C31F1F"
                    android:tag="p2m1"
                    android:text="-" />

                <Button
                    android:id="@+id/p2p5"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:backgroundTint="#C31F1F"
                    android:tag="p2p5"
                    android:text="+5" />

                <Button
                    android:id="@+id/p2m5"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:backgroundTint="#C31F1F"
                    android:tag="p2m5"
                    android:text="-5" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:paddingBottom="30dp">

            <TextView
                android:id="@+id/lifep4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="18dp"
                android:text="p4\n100"
                android:textAlignment="center"
                android:textColor="#00BCD4"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <Button
                    android:id="@+id/p4p1"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:backgroundTint="#00BCD4"
                    android:tag="p4p1"
                    android:text="+" />

                <Button
                    android:id="@+id/p4m1"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:backgroundTint="#00BCD4"
                    android:tag="p4m1"
                    android:text="-" />

                <Button
                    android:id="@+id/p4p5"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:backgroundTint="#00BCD4"
                    android:tag="p4p5"
                    android:text="+5" />

                <Button
                    android:id="@+id/p4m5"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:backgroundTint="#00BCD4"
                    android:tag="p4m5"
                    android:text="-5" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:paddingBottom="30dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <Button
                    android:id="@+id/p3p1"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:backgroundTint="#267E2A"
                    android:tag="p3p1"
                    android:text="+" />

                <Button
                    android:id="@+id/p3m1"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:backgroundTint="#267E2A"
                    android:tag="p3m1"
                    android:text="-" />

                <Button
                    android:id="@+id/p3p5"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:backgroundTint="#267E2A"
                    android:tag="p3p5"
                    android:text="+5" />

                <Button
                    android:id="@+id/p3m5"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:backgroundTint="#267E2A"
                    android:tag="p3m5"
                    android:text="-5" />
            </LinearLayout>

            <TextView
                android:id="@+id/lifep3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="18dp"
                android:text="p3\n100"
                android:textAlignment="center"
                android:textColor="#267E2A"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textSize="25dp" />
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>